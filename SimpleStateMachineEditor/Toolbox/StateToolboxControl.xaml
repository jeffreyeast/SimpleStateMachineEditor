<UserControl x:Class="SimpleStateMachineEditor.Toolbox.StateToolboxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid>
        <Ellipse Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" 
                 StrokeThickness="2" Stroke="Black">
            <Ellipse.Fill>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <StackPanel>
                            <Label Content="State" Foreground="Black" Background="Pink"/>
                        </StackPanel>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
